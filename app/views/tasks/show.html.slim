h1 タスクの詳細

.nav.justify-content-end
  = link_to '一覧', tasks_path, class: 'nav-link'
table.table.table-hover
  tbody
    tr
      th= I18n.t("activerecord.attributes.id", :id)
      / th= Task.human_attribute_name(:id)
      td= @task.id
    tr
      th= I18n.t("activerecord.attributes.name", :name)
      / th= Task.human_attribute_name(:name)
      td= @task.name
    tr
      th= I18n.t("activerecord.attributes.description", :description)
      / th= Task.human_attribute_name(:description)
      td= simple_format(h(@task.description), {}, sanitize: false, wrapper_tag: "div")
    tr
      th= I18n.t("activerecord.attributes.created_at", :created_at)
      / th= Task.human_attribute_name(:created_at)
      td= @task.created_at
    tr
      th= I18n.t("activerecord.attributes.updated_at", :updated_at)
      / th= Task.human_attribute_name(:updated_at)
      td= @task.updated_at

= link_to '編集', edit_task_path, class: 'btn btn-primary mr-3'

